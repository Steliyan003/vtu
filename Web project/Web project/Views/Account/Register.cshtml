@{
    ViewData["Title"] = "Register";
}

<h2>Регистрация</h2>

<form method="post">
    <div>
        <label>Email</label>
        <input type="email" name="email" required />
    </div>

    <div>
        <label>Парола</label>
        <input type="password" name="password" required />
    </div>

    <button type="submit">Регистрация</button>

    <div style="color:red">@ViewBag.Error</div>
</form>
