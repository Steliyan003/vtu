@model IEnumerable<WebProject.Models.Product>

@{
    ViewData["Title"] = "Продукти";
}

<h1 class="mb-4">Продукти</h1>

@if (!Model.Any())
{
    <p>Няма налични продукти.</p>
}
else
{
    <div class="row">
        @foreach (var p in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img class="card-img-top"
                         src="@p.ImageUrl"
                         alt="@p.Name"
                         style="height:250px;object-fit:cover;" />

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.Name</h5>

                        <p class="card-text" style="min-height:60px;">
                            @p.Description
                        </p>

                        <p class="fw-bold mb-3">
                            @p.Price.ToString("0.00") лв.
                        </p>

                        <div class="mb-2">
                            <a asp-area=""
                               asp-controller="Products"
                               asp-action="Details"
                               asp-route-id="@p.Id"
                               class="btn btn-outline-secondary btn-sm">
                                Виж детайли
                            </a>
                        </div>

                        <form asp-area=""
                              asp-controller="Cart"
                              asp-action="Add"
                              method="post"
                              class="mt-auto">
                            <input type="hidden" name="productId" value="@p.Id" />

                            <div class="input-group mb-2">
                                <label class="input-group-text" for="qty-@p.Id">Брой</label>
                                <select id="qty-@p.Id" name="quantity" class="form-select">
                                    @for (int q = 1; q <= 10; q++)
                                    {
                                        <option value="@q">@q</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-primary">
                                    Добави в количката
                                </button>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        }
    </div>
}
