@model WebProject.Models.Order

@{
    ViewData["Title"] = "Поръчката е приета";
}

<div class="mt-4">
    <h2>Благодарим за поръчката!</h2>

    <p class="lead">
        Номер на поръчка:
        <strong>#@Model.Id</strong>
    </p>

    <p>
        Ще се свържем с Вас за потвърждение на доставката.
    </p>

    <a asp-area=""
       asp-controller="Products"
       asp-action="Index"
       class="btn btn-primary me-2">
        Обратно към продуктите
    </a>

    <a asp-area=""
       asp-controller="Home"
       asp-action="Index"
       class="btn btn-secondary">
        Към началната страница
    </a>
</div>
