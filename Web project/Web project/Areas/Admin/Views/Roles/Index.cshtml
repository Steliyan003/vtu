@model IEnumerable<WebProject.ViewModels.AdminUserRoleViewModel>

@{
    ViewData["Title"] = "Управление на роли";
}

<div class="admin-page">
    <h2 class="mb-4">Управление на роли</h2>

    <div class="table-responsive">
        
        <table class="table table-striped table-hover align-middle admin-table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Име</th>
                    <th>E-mail</th>
                    <th>Текуща роля</th>
                    <th>Промени роля</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var index = 1;
                }
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@(string.IsNullOrWhiteSpace(u.DisplayName) ? "-" : u.DisplayName)</td>
                        <td>@u.Email</td>
                        <td>
                            <span class="badge @(u.CurrentRole == "Admin" ? "bg-warning text-dark" : "bg-secondary")">
                                @u.CurrentRole
                            </span>
                        </td>
                        <td>
                            <form asp-area="Admin"
                                  asp-controller="Roles"
                                  asp-action="SetRole"
                                  method="post"
                                  class="d-flex gap-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@u.Id" />

                                <select name="roleName" class="form-select form-select-sm w-auto">
                                    <option value="User" selected="@(u.CurrentRole == "User")">User</option>
                                    <option value="Admin" selected="@(u.CurrentRole == "Admin")">Admin</option>
                                </select>

                                <button type="submit" class="btn btn-sm btn-primary">
                                    Запази
                                </button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            </tbody>
        </table>
    </div>

    <a asp-area="Admin"
       asp-controller="Dashboard"
       asp-action="Index"
       class="btn btn-outline-secondary mt-3">
        ← Обратно към Admin Dashboard
    </a>
</div>
